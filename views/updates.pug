doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    p
      a(href="/") ‚Üê Return to the homepage
    h1= title
    if error
      p.notice.error= error
    form(method="POST", action="/update-cobj")
      label(for="name") Name
      input#name(type="text", name="name", required)

      label(for="species") Species
      input#species(type="text", name="species", required)

      label(for="bio") Bio
      textarea#bio(name="bio", rows="4")

      button(type="submit") Create record
