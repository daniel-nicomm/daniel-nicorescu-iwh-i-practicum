doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Homepage | Integrating With HubSpot I Practicum
    link(rel="stylesheet", href="/css/style.css")
  body
    header
      h1 Custom Object Records
      a.btn(href="/update-cobj") Add to this table
    if flash
      p.notice= flash
    if error
      p.notice.error= error
    if rows && rows.length
      table.table
        thead
          tr
            th ID
            th Name
            th Species
            th Bio
        tbody
          each r in rows
            tr
              td= r.id
              td= r.properties.name
              td= r.properties.species
              td= r.properties.bio
    else
      p.notice No records yet. Click "Add to this table" to create one.
